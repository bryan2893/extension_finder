{
  "manifest_version": 2,

  "name": "Subneting resolver",
  "description": "Chrome extension to resolve subneting given certain parameters",
  "version": "1.0.3",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Subneting resolver",
    "default_icon": "./images/ip_icon.ico"
  },
  "icons": {
    "256": "./images/ip_icon.ico"
  },
  "permissions": [
    "tabs"
  ]
}
